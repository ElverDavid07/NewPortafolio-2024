---
import { Icon } from 'astro-icon/components'
import { ProjectData, type ProjectInterface } from '../../utils/ProjectData'
import Subtitle from '../Subtitle.astro'
---

<section class="mt-32">
  <Subtitle>
    <Icon name="tabler:code" size={40} /> Projectos
  </Subtitle>
  <section class="mt-10 grid md:grid-cols-2 lg:grid-cols-3 gap-3">
    {
      ProjectData.map(
        ({
          name,
          description,
          urlImage,
          urlGithub,
          urlWeb
        }: ProjectInterface) => (
          <div class="shadow-slate-900 shadow-2xl pb-3 rounded-md z-10">
            <img
              src={urlImage}
              width="410"
              height="320"
              alt={name}
              class="rounded-xl p-2 lg:w-full"
            />
            <h2 class="text-center font-onest font-semibold text-xl">{name}</h2>
            <p class="text-balance p-2 text-slate-300 px-2">{description}</p>
            <div class="flex items-center gap-x-3 justify-end px-3">
              <a
                href={urlGithub}
                target="_blank"
                rel="noopener noreferrer"
                class="hover:text-primary text-slate-300 transition-all flex items-center gap-x-1"
              >
                <Icon name="ri:github-fill" size={30} />
                <span class="lg:sr-only">Ver codigo</span>
              </a>
              <a
                href={urlWeb}
                target="_blank"
                rel="noopener noreferrer"
                class="hover:text-primary text-slate-300 transition-all flex items-center gap-x-1"
              >
                <Icon name="ri:global-line" size={30} />
                <span class="lg:sr-only">Ir a la web</span>
              </a>
            </div>
          </div>
        )
      )
    }
  </section>
</section>
