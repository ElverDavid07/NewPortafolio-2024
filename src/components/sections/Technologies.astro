---
import Subtitle from '@/components/Subtitle.astro'
import {
  TechnologiesData,
  type TechnologiesInterface
} from '@/utils/TechnologiesData'
import { Icon } from 'astro-icon/components'
---

<section class="mt-32">
  <Subtitle><Icon name="tabler:rocket" size={40} /> Tecnologias</Subtitle>
  <div
    class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-3 md:gap-5 mt-10"
  >
    {
      TechnologiesData.map(({ name, link }: TechnologiesInterface) => (
        <div class=" rounded-md py-4 border border-slate-700 flex items-center flex-col gap-y-1 group hover:bg-white/5 duration-300 ease-in">
          <img
            src={link}
            alt={name}
            width="50"
            height="60"
            class="group-hover:-translate-y-1 duration-300 ease-in"
          />
          <span class="text-slate-300">{name}</span>
        </div>
      ))
    }
  </div>
</section>
